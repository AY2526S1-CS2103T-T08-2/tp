@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor UI_COLOR_T4
skinparam classBackgroundColor UI_COLOR
skinparam nodesep 80
skinparam ranksep 60

package UI <<Rectangle>>{
Class "<<interface>>\nUi" as Ui
Class "{abstract}\nUiPart" as UiPart
Class UiManager
Class MainWindow
Class HelpWindow
Class ImportWindow UI_COLOR_T1
Class ResultDisplay
Class PersonListPanel
Class PersonCard
Class StatusBarFooter
Class CommandBox
Class SidebarPanel UI_COLOR_T1
Class StatusViewPanel UI_COLOR_T1
Class TagsViewPanel UI_COLOR_T1
Class TemplateViewPanel UI_COLOR_T1
}

package Model <<Rectangle>> {
Class HiddenModel #FFFFFF
}

package Logic <<Rectangle>> {
Class HiddenLogic #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Ui

UiManager .left.|> Ui
UiManager -down-> "1" MainWindow
MainWindow *-down->  "1" CommandBox
MainWindow *-down-> "1" ResultDisplay
MainWindow *-down-> "1" PersonListPanel
MainWindow *-down-> "1" StatusBarFooter
MainWindow *-down-> "1" SidebarPanel
MainWindow *-down-> "1" TemplateViewPanel
MainWindow --> "0..1" HelpWindow
MainWindow --> "0..1" ImportWindow

PersonListPanel -down-> "*" PersonCard

SidebarPanel *-down-> "1" StatusViewPanel
SidebarPanel *-down-> "1" TagsViewPanel

MainWindow -left-|> UiPart

ResultDisplay --|> UiPart
CommandBox --|> UiPart
PersonListPanel --|> UiPart
PersonCard --|> UiPart
StatusBarFooter --|> UiPart
HelpWindow --|> UiPart
ImportWindow --|> UiPart
SidebarPanel --|> UiPart
StatusViewPanel --|> UiPart
TagsViewPanel --|> UiPart
TemplateViewPanel --|> UiPart

PersonCard ..> Model
StatusViewPanel ..> Model
TagsViewPanel ..> Model
TemplateViewPanel ..> Model
UiManager -right-> Logic
MainWindow -left-> Logic
ImportWindow --> Logic

PersonListPanel -[hidden]left- HelpWindow
HelpWindow -[hidden]left- ImportWindow
ImportWindow -[hidden]left- CommandBox
CommandBox -[hidden]left- ResultDisplay
ResultDisplay -[hidden]left- StatusBarFooter
StatusBarFooter -[hidden]left- TemplateViewPanel

SidebarPanel -[hidden]right- PersonCard
StatusViewPanel -[hidden]down- TagsViewPanel

MainWindow -[hidden]-|> UiPart
@enduml
