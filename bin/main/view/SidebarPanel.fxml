<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" styleClass="sidebar-panel"
      minWidth="200" prefWidth="200">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>


    <VBox styleClass="sidebar-section" VBox.vgrow="NEVER">
        <Label text="Status" styleClass="sidebar-header" />
        <StackPane fx:id="statusSectionPlaceholder" styleClass="sidebar-content" minHeight="100" prefHeight="100">
            <Label text="(Not implemented yet)" styleClass="placeholder-text" />
        </StackPane>
        <VBox.margin>
            <Insets bottom="15" />
        </VBox.margin>
    </VBox>

    <VBox styleClass="sidebar-section" VBox.vgrow="ALWAYS">
        <Label text="Selected Tags" styleClass="sidebar-header" />
        <StackPane fx:id="tagsSectionPlaceholder" styleClass="sidebar-content" VBox.vgrow="ALWAYS">
            <Label text="(Not implemented yet)" styleClass="placeholder-text" />
        </StackPane>
    </VBox>
</VBox>

